<?xml version="1.0" encoding="utf-8"?><!--<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
<ScrollView android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/avatarURLProfile"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginTop="32dp"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--    <LinearLayout-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:gravity="center_horizontal"-->
        <!--        android:orientation="horizontal">-->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="20dp"
            android:layout_marginHorizontal="10dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/usernameProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:layout_marginHorizontal="12dp"
                    android:textSize="@dimen/text_body"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                     />

                <TextView
                    android:id="@+id/fullNameProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:textSize="@dimen/text_body"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/baseline_badge_24"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <!--    </LinearLayout>-->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/emailProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:layout_marginHorizontal="12dp"
                    android:textSize="@dimen/text_body"
                    android:drawableLeft="@drawable/ic_baseline_email_24"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/phoneProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="12dp"
                    android:textSize="@dimen/text_body"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                    />

                <TextView
                    android:id="@+id/genderProfile"
                    android:drawableLeft="@drawable/ic_baseline_wc_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="12dp"
                    android:textSize="@dimen/text_body"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/birthProfile"
                    android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="12dp"
                    android:textSize="@dimen/text_body"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/EditProfileBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="@dimen/text_btn"
            android:onClick="openEditProfileActivity"
            android:drawableLeft="@drawable/ic_sharp_edit_24"
            android:text="@string/edit_profile" />

        <Button
            android:id="@+id/LogOutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_btn"
            android:layout_marginTop="30dp"
            android:onClick="openEditProfileActivity"
            android:drawableLeft="@drawable/baseline_logout_24"
            android:text="LOGOUT" />
    </LinearLayout>
</ScrollView>


