<resources>

    <style name="Widget.Theme.TrainMeLogin.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.TrainMeLogin.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/light_gray</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>


    <style name="MyEditTextStyle" parent="android:Widget.EditText">
        <item name="android:padding">10dp</item>
<!--        <item name="android:background">@drawable/custom_input</item>-->
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>
</resources>