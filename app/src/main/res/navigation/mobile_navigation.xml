<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.trainme.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_routines_list" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.trainme.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_routines_list" />

    <fragment
        android:id="@+id/navigation_favs"
        android:name="com.trainme.ui.favs.FavsFragment"
        android:label="@string/title_favs"
        tools:layout="@layout/fragment_routines_list" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.trainme.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>